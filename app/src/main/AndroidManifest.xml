<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gamecodeschool.ar_userinterface">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SpinnerActivity"
                android:label="@string/title_activity_spinner"
                android:parentActivityName=".SignupActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.gamecodeschool.ar_userinterface.SignupActivity"/>
        </activity>
        <activity android:name=".SpinnerActivity$SpinnerActivity"
                  android:label="@string/title_activity_spinner"
                  android:theme="@style/Animation.AppCompat.DropDownUp"/>
        <activity
                android:name=".SignupActivity"
                android:label="@string/title_activity_signup"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.gamecodeschool.ar_userinterface.MainActivity"/>
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>